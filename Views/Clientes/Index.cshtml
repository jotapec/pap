@model IEnumerable<SalaoIedaV4.Models.Cliente>

@{
    ViewBag.Title = "Index";
}

<h2>Clientes</h2>

<p>
    @Html.ActionLink("Adicionar Cliente", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.desc_nome_cliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.desc_email_cliente)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.desc_nome_cliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.desc_email_cliente)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idCliente }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.idCliente }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.idCliente })
        </td>
    </tr>
}

</table>
